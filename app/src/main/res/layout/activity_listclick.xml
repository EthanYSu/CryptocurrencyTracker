<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ethan.cryptocurrencytracker.listclick">


    <TextView
        android:id="@+id/coinName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bitcoin"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/coinSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/coinName"
        android:layout_toRightOf="@+id/coinName"
        android:textSize="25sp"
        android:text="TextView" />

    <TextView
        android:id="@+id/priceView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/coinName"
        android:layout_marginTop="20dp"
        android:text="Current Price"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/coinPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/priceView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="TextView"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/priceView"
        android:layout_marginTop="11dp" />

    <TextView
        android:id="@+id/chg1HR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView5"
        android:text="Percent Change (1HR)"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/changeOneHour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/coinPrice"
        android:layout_alignStart="@+id/coinPrice"
        android:layout_alignTop="@+id/chg1HR"
        android:text="TextView"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/chg24Hr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/chg1HR"
        android:layout_marginTop="10dp"
        android:text="Percent Change (24HR)"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/change24Hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/chg24Hr"
        android:layout_alignLeft="@+id/changeOneHour"
        android:layout_alignStart="@+id/changeOneHour"
        android:text="TextView"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/chg7day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/chg24Hr"
        android:layout_marginTop="11dp"
        android:text="Percent Change (7D)"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/change7Day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/chg7day"
        android:layout_alignLeft="@+id/change24Hour"
        android:layout_alignStart="@+id/change24Hour"
        android:text="TextView"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/priceView"
        android:layout_alignRight="@+id/priceView"
        android:layout_below="@+id/chg7day"
        android:layout_marginTop="132dp"
        android:text="TextView" />

</RelativeLayout>
