<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ethan.cryptocurrencytracker.listclick">


    <TextView
        android:id="@+id/coinName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bitcoin"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/coinSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/coinName"
        android:layout_toRightOf="@+id/coinName"
        android:textSize="25sp"
        android:text="@string/textview" />

    <TextView
        android:id="@+id/priceView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/coinName"
        android:layout_marginTop="20dp"
        android:text="@string/currentPrice"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/coinPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/priceView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="@string/textview"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/priceView"
        android:layout_marginTop="11dp" />

    <TextView
        android:id="@+id/chg1HR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView5"
        android:text="@string/oneHour"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/changeOneHour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/coinPrice"
        android:layout_alignStart="@+id/coinPrice"
        android:layout_alignTop="@+id/chg1HR"
        android:text="@string/textview"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/chg24Hr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/chg1HR"
        android:layout_marginTop="10dp"
        android:text="@string/oneDay"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/change24Hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/chg24Hr"
        android:layout_alignLeft="@+id/changeOneHour"
        android:layout_alignStart="@+id/changeOneHour"
        android:text="@string/textview"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/chg7day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/chg24Hr"
        android:layout_marginTop="10dp"
        android:text="@string/sevenDay"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/change7Day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/chg7day"
        android:layout_alignLeft="@+id/change24Hour"
        android:layout_alignStart="@+id/change24Hour"
        android:text="@string/textview"
        android:textSize="16sp"/>


    <TextView
        android:id="@+id/graph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="31dp"
        android:layout_toEndOf="@+id/textView5"
        android:layout_toRightOf="@+id/textView5"
        android:onClick="graphClick"
        android:text="Graph"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/chg7day"
        android:layout_marginTop="10dp"
        android:text="Market Cap"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/marketCap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignEnd="@+id/change7Day"
        android:layout_alignRight="@+id/change7Day"
        android:text="TextView"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="10dp"
        android:text="Volume"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignEnd="@+id/marketCap"
        android:layout_alignRight="@+id/marketCap"
        android:text="TextView"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="10dp"
        android:text="Available Supply"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/availableSupply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignEnd="@+id/volume"
        android:layout_alignRight="@+id/volume"
        android:text="TextView"
        android:textSize="16sp" />

</RelativeLayout>
